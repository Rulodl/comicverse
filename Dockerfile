FROM python:3.13-slim

# Evitar prompts durante instalaciÃ³n
ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

COPY requirements.txt .

# Instalar dependencias del sistema y ODBC Driver 17
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl gnupg2 ca-certificates apt-transport-https unixodbc-dev && \
    mkdir -p /etc/apt/keyrings && \
    # Descargar clave GPG de Microsoft en formato dearmored
    curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /etc/apt/keyrings/microsoft.gpg && \
    # Registrar repositorio Microsoft para Debian 12 (Bookworm)
    echo "deb [arch=amd64 signed-by=/etc/apt/keyrings/microsoft.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" \
        > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && \
    # Instalar ODBC Driver 17
    ACCEPT_EULA=Y apt-get install -y --no-install-recommends msodbcsql17 && \
    # Instalar dependencias Python
    pip install --no-cache-dir -r requirements.txt && \
    # Limpiar
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY . .

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
